<div class="container">
<br/>
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Wishlist", wishlists_index_path, class: "sidebar-link active" %></li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Wishlist
        </div>
        <div class="panel-body">
          <% @wishlist.each do |w| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag Tour.find(w.tour_id).cover_photo(:thumb) %>
            </div>
            <div class="col-md-5">
              <h4><%= link_to Tour.find(w.tour_id).title, tour_path(Tour.find(w.tour_id))%></h4>
            </div>
            <div class="col-md-3 pull-right">
              &nbsp &nbsp
              <%= link_to delete_from_wishlist_path(:tour_id => w.tour_id, :traveler_id => w.traveler_id), method: :delete, data: {confirm: "Are you sure?"} do %>     
              <i class="fa fa-trash fa-2x icon-babu lower"></i>
              <% end %>
            </div>
          </div>
          <hr/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
