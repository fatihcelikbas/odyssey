<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", tours_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Reservations
      </div>
      <div class="panel-body">

        <% @tours.each do |tour| %>
            <% tour.reservations.each do |reservation| %>
                <div class="row">
                  <div class="col-md-2">
                    <%= reservation.start_date.strftime('%v at %H:%M for ' + reservation.duration.to_s + ' hours')%>
                  </div>
                  <div class="col-md-2">
                    <%= link_to tour_path(reservation.tour) do %>
                        <%= image_tag reservation.tour.cover_photo(:thumb) %>
                    <% end %>
                  </div>
                  <div class="col-md-5">
                    <%= link_to reservation.tour.title, tour_path(reservation.tour) %><br/><br/>
                    <span>
                      <%= link_to traveler_path(reservation.traveler) do %>
                        <%= image_tag avatar_url(reservation.traveler), class: "img-circle avatar-small" %>
                        <%= reservation.traveler.firstname + " " + reservation.traveler.lastname %>
                      <% end %>
                    </span>
                  </div>
                </div>
                <hr/>

            <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>