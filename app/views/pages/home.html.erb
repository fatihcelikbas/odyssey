<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where will you discover next?", class: "form-control", id: "autolocation" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datetimepicker" %>
    </div>
  </div>
  <br/><br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br/><hr/><br/>

<!-- Tours -->
<div><h3>Tours</h3></div>
<br/>

<div class="row">
  <% @tours.each do |tour| %>
      <div class="col-md-4">
          <div class="panel panel-default">
              <div class="panel-heading preview">
                  <%= image_tag tour.cover_photo(:medium) %>
              </div>
              <div class="panel-body">
                  <%= link_to tour.title, tour%>
              </div>
          </div>
      </div>
  <% end %>
</div>

<script>
$('#start_date').datetimepicker({
  format: 'd.m.Y H:i',
  lang:'en'
});
</script>