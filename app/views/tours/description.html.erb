<div class="row">
  <div class="col-md-3">
      <%= render 'tour_menu'%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-defualt">
      
      <div class="panel-heading">
        Description
      </div>
    </div>
    
    <div class="panel-body">
      <div class="containr">
        <%= form_for @tour do |f| %>
          
          <div class="row">
            <div class="form-group">
              <label>Title</label>
                <%= f.text_field :title, placeholder: "Title of your tour?", class: "form-control" %>
            </div>
          </div>
          
          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
          </div>
        <% end %>
        
        <%= form for @tour do |f| %>
          
          <div class="row">
            <div class="form-group">
              <label>Description</label>
                <%= f.text_field :description, rows: 5, placeholder: "What is your tour like? Where are you going?", class: "form-control" %>
            </div>
          </div>
          
          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>