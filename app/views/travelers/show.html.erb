<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag avatar_url(@traveler), class: "avatar-full"%>
            <% if current_traveler && current_traveler != @traveler %>
                <%= link_to "Send Message", conversation_path(sender_id: current_traveler.id, recipient_id: @traveler.id), method: :post, class: "btn btn-default" %>
            <% end %>
        </div>
        <br/>
        <div class="panel panel-default">
            <div class="panel-heading">About me</div>
            <div class="panel-body">
                <ul class="sidebar-list">
                    <% if @traveler.confirmation_token%>
                        <li>Email Address<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
                    <% end %>
                    <% if @traveler.provider %>
                        <li>Facebook<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
                    <% end %>
                    <li>Phone Number<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <h2><%= @traveler.firstname + " " + @traveler.lastname %></h2>
        
        <div class="description row-space-3">
            <%= @traveler.description %>
        </div>
        
        <h4>Listings (<%= @tours.length %>)</h4><br/>
        <div class="row">
            <% @tours.each do |tour| %>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading preview">
                            <%= image_tag tour.cover_photo(:medium) %>
                        </div>
                        <div class="panel-body">
                            <%= link_to tour.title, tour%>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <br/>
    
    <h4>Reviews from Tourists (<%= @tourist_reviews.count %>)</h4>
    <div class="row">
        <%= render "reviews/tourist_list" %>
    </div>
    <br/>
    
    <h4>Reviews from Guides (<%= @guide_reviews.count %>)</h4>
    <div class="row">
        <%= render "reviews/guide_list" %>
    </div>
    
    
    
</div>